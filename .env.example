# Claude API Configuration
CLAUDE_API_KEY=your_api_key_here

# Optional: Set the API URL if you're using a different endpoint
# CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# Environment Configuration
NODE_ENV=development # Options: development, production
RENDER=true # Set to 'true' in Render environment

# Job Storage Configuration
JOB_STORAGE_TYPE=file # Options: 'file' (default) or 'memory'

# File Storage Configuration
# - Local development: ./.render/jobs
# - Render production: /var/data/jobs (persistent disk)
# - Other production: /tmp/jobs
RENDER_STORAGE_DIR=/var/data/jobs

# Maximum age of jobs in milliseconds (default: 24 hours)
JOB_MAX_AGE=86400000

# Feature Flags
NEXT_PUBLIC_USE_DIRECT_EVALUATION=false

# Server Configuration
PORT=3000 # The port your application will run on

# Render Specific Configuration
# These will be automatically set by Render
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
# RENDER_SERVICE_ID=srv-your-service-id
# RENDER_GIT_COMMIT=abcd1234
# RENDER_INTERNAL_HOSTNAME=your-app-name 