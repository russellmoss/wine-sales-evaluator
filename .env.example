# Netlify development URL
NETLIFY_DEV_URL=http://localhost:8888

# Netlify production URL (automatically set by Netlify)
URL=https://your-site-name.netlify.app

# Claude API key (replace with your actual key)
CLAUDE_API_KEY=your_api_key_here

# Optional: Set the API URL if you're using a different endpoint
# CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# Next.js environment
NODE_ENV=development 

# Netlify environment flag (set to 'true' in Netlify environment)
NETLIFY=false

# Render environment flag (set to 'true' in Render environment)
RENDER=false

# Job storage configuration
# Options: 'file' (default) or 'memory'
JOB_STORAGE_TYPE=file

# Directory for file-based job storage
# - Local development: ./.render/jobs
# - Render production: /var/data/jobs (persistent disk)
# - Other production: /tmp/jobs
RENDER_STORAGE_DIR=/var/data/jobs

# Maximum age of jobs in milliseconds (default: 86400000 = 24 hours)
JOB_MAX_AGE=86400000

# Feature flags
NEXT_PUBLIC_USE_DIRECT_EVALUATION=false 